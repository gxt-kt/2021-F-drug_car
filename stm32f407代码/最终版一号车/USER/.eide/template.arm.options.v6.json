{
    "version": 3,
    "beforeBuildTasks": [],
    "afterBuildTasks": [],
    "global": {
        "output-debug-info": "enable"
    },
    "c/cpp-compiler": {
        "optimization": "level-0",
        "language-c": "c99",
        "language-cpp": "c++11",
        "link-time-optimization": true,
        "warnings": "ac5-like-warnings",
        "use-rtti": true
    },
    "asm-compiler": {
        "$use": "asm"
    },
    "linker": {
        "output-format": "elf",
        "misc-controls": "--diag_suppress=L6329"
    }
}